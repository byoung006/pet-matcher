generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:moosethedog106@localhost:3306/pet_matcher_dev"
}

model pets {
  id       Int          @id @default(autoincrement())
  userId   Int?
  petName  String       @db.VarChar(255)
  petColor String       @db.VarChar(255)
  petAge   Int
  petKind  pets_petKind
  users    users?       @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "pets_ibfk_1")

  @@index([userId], map: "userId")
}

model users {
  id       Int     @id @default(autoincrement())
  name     String  @db.VarChar(255)
  age      Int
  isActive Boolean
  email    String  @db.VarChar(255) @unique
  password String  @db.VarChar(255)
  pets     pets[]
  matches  userMatches[]
}
// create a model for the matches of the users to store as an array of userMatches in the users model

model userMatches {
  id       Int     @id @default(autoincrement())
  userId   Int
  matches  users   @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "userMatches_ibfk_2")

  @@index([userId], map: "userId")
}

enum pets_petKind {
  dog
  cat
  other
}
